pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'python-flask'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE, '-f Dockerfile .')
                }
            }
        }

        stage('Deploy to Docker Container') {
            steps {
                script {
                    bat 'docker rm -f python_flask_container || true'
                    bat 'docker run -d --name python_flask_container -p 5000:5000 python-flask'
                }
            }
        }
    }
}
