pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'python-flask'
        TOMCAT_CONTAINER = 'tomcat'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE, '-f Dockerfile .')
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                script {
                    //bat 'docker pull tomcat:latest'
                    bat 'docker rm -f tomcat_container || true'
                    //bat 'docker run -d --name tomcat_container -p 8080:8080 tomcat:latest'
                    //docker.image('flask-app:latest').run('-d -p 8080:8080 tomcat:latest')
                    docker.image(DOCKER_IMAGE).run('-d --name tomcat_container -p 8080:8080 tomcat:latest')
                    bat 'docker exec -d tomcat_container /usr/local/tomcat/bin/catalina.sh start'
                }
            }
        }
    }
}
